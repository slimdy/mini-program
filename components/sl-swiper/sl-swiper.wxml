<swiper class="swiper_class" 
        circula
        autoplay 
        interval="3000" 
        duration='300' 
        indicator-dots 
        indicator-active-color='#ff5777'>
    <block wx:for="{{banners}}" 
           wx:key="index">
      <swiper-item class="swiper-item" >
        <image  src="{{item.image}}"  />
      </swiper-item>   
    </block>
  </swiper>
